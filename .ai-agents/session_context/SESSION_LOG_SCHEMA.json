{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Session Log Schema",
  "description": "Structured event log for agent sessions with causal tracking",
  "version": "1.0.0",

  "definitions": {
    "event": {
      "type": "object",
      "required": ["event_id", "timestamp", "event_type", "provenance"],
      "properties": {
        "event_id": {
          "type": "string",
          "description": "Unique identifier for this event",
          "pattern": "^evt_[0-9a-f]{8}$"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when event occurred"
        },
        "event_type": {
          "type": "string",
          "enum": ["user_message", "tool_call", "state_change", "commitment", "error", "constraint_applied", "decision"],
          "description": "Type of event being logged"
        },
        "provenance": {
          "type": "object",
          "required": ["source", "agent"],
          "properties": {
            "source": {
              "type": "string",
              "description": "Where this information came from"
            },
            "agent": {
              "type": "string",
              "enum": ["claude_code", "gemini", "codex", "user"],
              "description": "Which agent created this event"
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Confidence in this information (0-1)"
            }
          }
        },
        "causal_steps": {
          "type": "array",
          "description": "Decision points and reasoning that led to this event",
          "items": {
            "type": "object",
            "required": ["step", "reasoning"],
            "properties": {
              "step": {
                "type": "string",
                "description": "What decision was made"
              },
              "reasoning": {
                "type": "string",
                "description": "Why this decision was made"
              },
              "alternatives_considered": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Other options that were considered"
              }
            }
          }
        },
        "active_constraints": {
          "type": "array",
          "description": "Governance rules currently in effect",
          "items": {
            "type": "object",
            "required": ["constraint", "source"],
            "properties": {
              "constraint": {
                "type": "string",
                "description": "The constraint rule"
              },
              "source": {
                "type": "string",
                "description": "Document where this constraint is defined"
              },
              "priority": {
                "type": "string",
                "enum": ["mandatory", "recommended", "optional"]
              }
            }
          }
        },
        "failure_ledger": {
          "type": "array",
          "description": "What was tried and failed",
          "items": {
            "type": "object",
            "required": ["attempt", "failure_reason"],
            "properties": {
              "attempt": {
                "type": "string",
                "description": "What was tried"
              },
              "failure_reason": {
                "type": "string",
                "description": "Why it failed"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "error_code": {
                "type": "string",
                "description": "Error code if applicable"
              }
            }
          }
        },
        "open_commitments": {
          "type": "array",
          "description": "Promises/deliverables still pending",
          "items": {
            "type": "object",
            "required": ["commitment", "status"],
            "properties": {
              "commitment": {
                "type": "string",
                "description": "What was promised"
              },
              "status": {
                "type": "string",
                "enum": ["pending", "in_progress", "blocked", "completed"],
                "description": "Current status"
              },
              "due_by": {
                "type": "string",
                "format": "date-time",
                "description": "When this is expected to be complete"
              },
              "dependencies": {
                "type": "array",
                "items": {"type": "string"},
                "description": "What this commitment depends on"
              }
            }
          }
        },
        "key_entities": {
          "type": "object",
          "description": "Map of shorthand â†’ full references",
          "additionalProperties": {
            "type": "object",
            "required": ["full_name", "type"],
            "properties": {
              "full_name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["file", "function", "module", "concept", "agent", "service"]
              },
              "location": {
                "type": "string",
                "description": "File path or URL"
              }
            }
          }
        },
        "dependencies": {
          "type": "object",
          "description": "What depends on what",
          "properties": {
            "depends_on": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Event IDs this event depends on"
            },
            "blocks": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Event IDs blocked by this event"
            }
          }
        },
        "data": {
          "type": "object",
          "description": "Event-specific data (varies by event_type)"
        }
      }
    }
  },

  "type": "object",
  "description": "Root schema for session log events",
  "$ref": "#/definitions/event"
}
